<!-- Main Content -->
<main>
  <div class="container">
    
    <div class = "row">
    <div class = "col-md-offset-3 col-md-6">
        <h1><%=title%></h1>
        <br>
   <table class = "table-bordered table-striped table-hover">
       
        <tr>
        <th class = "text-center">Day</th>
        
        <th class = "text-center">Name</th>
        
        <th class = "text-center">Distance (km)</th>
        
        <th class = "text-center">Time (secs)</th>
        
        <th class = "text-center">Speed (km/h)</th>
        </tr>
        <!-- repeat template to show db -->
        <% for(let count=0; count<Booklist.length; count++){ %>
            <tr>
                <td class = "text-ceter"><%= Booklist[count].name %></td>
                <td class = "text-ceter"><%= Booklist[count].author %></td> 
                <td class = "text-ceter"><%= Booklist[count].published %></td>
                <td class = "text-ceter"><%= Booklist[count].description %></td>
                <td class = "text-ceter"><%= Booklist[count].price %></td>
            </tr>

        <%} %>

   </table>

   
    </div>
    </div>

</div>
</main>
